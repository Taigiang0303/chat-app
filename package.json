{
  "name": "advanced-chat-application",
  "version": "0.1.0",
  "private": true,
  "description": "A modern, type-safe chat application built with Next.js, FastAPI, and Supabase",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "test": "pnpm --filter frontend test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prepare": "husky install"
  },
  "keywords": [
    "chat",
    "nextjs",
    "fastapi",
    "supabase",
    "typescript",
    "python"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "dependencies": {
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "sonner": "^2.0.1"
  }
}
